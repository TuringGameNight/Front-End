
<div class="row justify-content-center mt-5" id="welcome-message">
  <h1>Welcome <%= @user.name %>!</h1>
</div>


<div class="container">
  <div class="row">
    <div class="col-md card m-3 align-items-center scroll" id="user-games">
      <h3 class="card-title">Games</h3>
      <%= button_to 'Add a Game', '/games/search', method: :get, class: "btn btn-primary" %>

      <div class="container">
        <ul class="row mt-3">
          <% @user.games.each do |game| %>
            <li class="card m-3 p-2"><%= game.name %></li>
          <% end %>
        </ul>
      </div>

    </div>

    <div class="col-md card m-3 align-items-center scroll" id="game-nights">
      <h3 class="card-title">Game Nights</h3>
      <%= button_to 'Add a Game Night', game_nights_new_path, class: "btn btn-primary"%>
      <div class="container">
        <ul class="row mt-3">
          <% @user.game_nights.each do |game_night| %>
            <li class="card m-3 p-2"><%= game_night.name %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="col-md card m-3 align-items-center scroll" id="friends">
      <h3 class="card-title">Friends</h3>
        <%= form_tag dashboard_path, method: :post do %>
          <%= text_field_tag :friend_email, "", placeholder: "Friend's Email", class: "m-2", style: "text-align: center;"%>
          <div class="row justify-content-center">
            <%= submit_tag 'Add Friend', class: "btn btn-primary m-2"%>
          </div>
        <% end %>
      <div class="container">
        <ul class="row mt-3">
          <% @user.friends.each do |friend| %>
            <li class="card m-3 p-2"><%= friend.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
