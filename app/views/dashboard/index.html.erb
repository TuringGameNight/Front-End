
<body style="background-color: #e8cbc0; background: -webkit-linear-gradient(to right, #e8cbc0, #636fa4); background: linear-gradient(to right, #e8cbc0, #636fa4);">

<div class="container py-5">
    <div class="row text-center text-black">
        <div class="col-lg-8 mx-auto">
            <h1 class="welcome-name display-4" id="welcome-message">Welcome <%= @user.name %>! </h1>
            <p class="lead mb-0" id="welcome-message">Navigate your Games, Schedule GameNights and add Friends</p>
            <p class="lead" id="welcome-message">All from your dashboard

            </p>
        </div>
    </div>
</div>

<div class="container py-5">
  <div class="row">
    <div class="shadow p-3 pop-out col-md card m-3 align-items-center scroll" id="user-games" style="height: 300px;">
      <h3 class="card-title">Games</h3>
      <%= button_to 'Add a Game', '/games/search', method: :get, class: "btn btn-primary shadow"%>
      <div class="container">
        <ul class="row mt-3">
          <% @games.each do |game| %>
            <li class="card m-3 p-2"><%= game.name %></li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="shadow p-3 pop-out col-md card m-3 align-items-center scroll" id="game-nights">
      <h3 class="card-title">Game Nights</h3>
      <%= button_to 'Add a Game Night', game_nights_new_path, method: :get, class: "btn btn-primary shadow"%>
      <div class="container">
        <ul class="row mt-3">
          <% @game_nights.each do |game_night| %>
            <li class="card m-3 p-2"><%= game_night.name %></li>
          <% end %>
        </ul>
      </div>
      <div class="container invitations">
        <h4>Pending Invitations</h4>
        <ul class="row mt-3">
          <% @game_night_invites.each do |invite| %>
            <li class="card m-3 p-2"><%= invite.host_name %>
              Host Name: <%= invite.name %><br>
              Date: <%= invite.date %><br>
              # of Games: <%= invite.number_of_games %><br>
              <%= button_to "Accept", "", class: "btn btn-success shadow" %>
              <%= button_to "Decline", "", class: "btn btn-danger shadow" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>


    <div class="shadow p-3 pop-out col-md card m-3 align-items-center scroll shadow-4" id="friends">
      <h3 class="card-title">Friends</h3>
        <%= form_tag dashboard_path, method: :post do %>
          <%= text_field_tag :friend_email, "", placeholder: "Friend's Email", class: "m-2", style: "text-align: center;"%>
          <div class="row justify-content-center">
            <%= submit_tag 'Add Friend', class: "btn btn-primary m-2 shadow"%>
          </div>
        <% end %>
      <div class="container">
        <ul class="row mt-3">
          <% @friends.each do |friend| %>
            <li class="card m-3 p-2"><%= friend.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
</body>
