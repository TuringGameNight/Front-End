<%= form_with url: '/game-nights', local: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, value: params[:title] %><br><br>

  <%= f.label :date %>
  <%= f.date_field :date, min: Date.today, max: Date.today.next_year(4) %><br><br>

  <%= f.label :number_of_games %>
  <%= f.number_field :number_of_games, value: params[:number_of_games] %><br><br>

  <%= f.collection_check_boxes :friends, @user.friends, :id, :name %>

  <%= f.submit "Let's Play!" %>
<% end %>